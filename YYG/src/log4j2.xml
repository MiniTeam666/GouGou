<?xml version="1.0" encoding="UTF-8"?>
<configuration status="warn"> 
   <appenders>    
    <Console name="Console" target="SYSTEM_OUT">    
      <ThresholdFilter level="trace" onMatch="ACCEPT" onMismatch="DENY"/>    
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%class{36}:%L].%-5level: %msg%xEx%n"/>    
    </Console>    
    <File name="log" fileName="target/test.log" append="true">    
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%class{36}:%L].%-5level: %msg%xEx%n"/>    
    </File>    
    <RollingFile name="RollingFile" fileName="logs/yyg.log"    
                 filePattern="logs/$${date:yyyy-MM}/yyg-%d{MM-dd-yyyy}-%i.log.gz">    
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%class{36}:%L].%-5level: %msg%xEx%n"/>    
      <SizeBasedTriggeringPolicy size="500 MB" />    
      <DefaultRolloverStrategy max="20"/>
    </RollingFile>    
  </appenders>    
  
  <loggers> 
    <root level="trace"> 
      <appender-ref ref="Console"/> 
      <appender-ref ref="RollingFile"/>
    </root>
  </loggers>
</configuration> 